<h1>State List</h1>

<p>here is a list of states...</p>

<!-- iterate through each state in the array and put them into list items individually -->

<select>
	<% @states.each do | s | %>
		<% if s['id'] == 'CA' %>
		<option value= <%= s['id'] %> selected> <%= s['name'] %></option>
		<% else %>
		<option value= <%= s['id'] %> > <%= s['name'] %></option>
		<% end %>
	<%end%>
</select>